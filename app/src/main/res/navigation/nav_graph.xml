<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/onboardFragment">

    <fragment
        android:id="@+id/onboardFragment"
        android:name="com.axout.kts_android_09_2021.onboarding.OnboardFragment"
        android:label="OnboardFragment"
        tools:layout="@layout/fragment_onboard">
        <action
            android:id="@+id/action_onboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/onboardFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.axout.kts_android_09_2021.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action android:id="@+id/action_loginFragment_to_authFragment" app:destination="@id/authFragment"
                app:popUpTo="@id/loginFragment" app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.axout.kts_android_09_2021.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment android:id="@+id/authFragment" android:name="com.axout.kts_android_09_2021.authorize.AuthFragment"
              android:label="AuthFragment">
        <action android:id="@+id/action_authFragment_to_mainFragment" app:destination="@id/mainFragment"
                app:popUpTo="@id/authFragment" app:popUpToInclusive="true"/>
    </fragment>
</navigation>